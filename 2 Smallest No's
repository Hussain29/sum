#include <stdio.h>
int main()
{
    int n = 0, i = 0, j = 0, temp = 0;
    printf("Enter the desired number of elements: ");
    scanf("%d", &n);
    int arr[n];
    for(i = 0; i < n; i++)
    {
        printf("Enter value at index [%d]:", i);
        scanf("%d", &arr[i]);
    }
    for(i = 0; i < n; i++)
        {
            for(j = 0; j < n; j++)
            {
                if(arr[i] < arr[j])
                {
                    temp = arr[i];
                    arr[i] = arr[j];
                    arr[j] = temp;
                }
            }
        }
    printf("The two smallest numbers are %d and %d", arr[0], arr[1]);
}
